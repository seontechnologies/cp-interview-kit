{
  "name": "insighthub-jobs",
  "version": "1.0.0",
  "description": "Background jobs service for InsightHub",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "npm run setup",
    "setup": "node setup-prisma.js",
    "dev": "npm run setup && ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npm run setup && tsc && npm run prisma:generate",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "prisma:generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/uuid": "^9.0.7",
    "eslint": "^8.56.0",
    "prisma": "^5.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
